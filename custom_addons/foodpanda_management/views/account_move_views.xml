<odoo>
    <record id="view_move_form_inherited" model="ir.ui.view"> <!-- id can be anything-->
        <field name="name">account.move.form</field> <!-- name can be anything, best practise= model_name.extension-->
        <field name="model">account.move</field> <!-- Form view er model name-->
         <field name="inherit_id" ref="account.view_move_form" /> <!-- Form view er external id -->
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_reference']" position="before">
                <field name="appointment_id" />
            </xpath>


            <xpath expr="//group[@name='accounting_info_group']//field[@name='auto_post']" position="attributes"> 
                <attribute name="invisible">1</attribute>  <!--1 means invisible will be true ,0 mean false -->
            </xpath>
           
        </field>
    </record>

        <record id="view_invoice_tree_inherited" model="ir.ui.view"> <!-- id can be anything , best practise external_id + inherited-->
            <field name="name">account.move.tree</field> <!-- name can be anything, bes practise= model_name.extension-->
            <field name="model">account.move</field> <!-- List view er model name-->
            <field name="inherit_id" ref="account.view_invoice_tree" /> <!-- List view er external id -->
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="appointment_id" /> 
                </xpath>

            </field>
        </record>


</odoo>